<Window x:Class="Raycasting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raycasting"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200">
    <Grid>
        <Canvas x:Name="Playground" Background="Black" Height="1000" Width="1000" MouseMove="Playground_MouseMove" Margin="0,0,200,-16"></Canvas>
        <Border BorderBrush="Black" BorderThickness="1" Margin="1013,26,12,743">
            <Button Content="Create Boundaries" Margin="5,5,6,158" Click="btnCreateBoundaries_Click"/>
        </Border>
        <Label Content="Settings" HorizontalAlignment="Left" Margin="1012,4,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbxBorderlines" Content="Borderlines" HorizontalAlignment="Left" Margin="1020,90,0,0" VerticalAlignment="Top" Width="160" Checked="BoundaryLines_Checked" Unchecked="BoundaryLines_Unchecked"/>
    </Grid>
</Window>
